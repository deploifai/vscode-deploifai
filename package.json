{
  "name": "deploifai",
  "displayName": "Deploifai",
  "publisher": "Deploifai",
  "icon": "Deploifai128_128.png",
  "author": {
    "name": "Deploifai Limited"
  },
  "readme": "README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/deploifai/vscode-deploifai.git"
  },
  "description": "Deploifai support within VSCode",
  "version": "0.0.9",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:deploifaiProjects"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "deploifaiSidebarView",
          "title": "Deploifai",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "deploifaiSidebarView": [
        {
          "id": "deploifaiProjects",
          "name": "Projects",
          "type": "tree",
          "contextualTitle": "Deploifai"
        }
      ]
    },
    "commands": [
      {
        "command": "deploifaiProjects.openRemote",
        "title": "Open Remote",
        "icon": "media/icon.svg"
      },
      {
        "command": "deploifai.changeWorkspace",
        "title": "Change workspace",
        "icon": "$(library)"
      },
      {
        "command": "deploifai.logout",
        "title": "Logout",
        "icon": "$(sign-out)"
      },
      {
        "command": "deploifai.login",
        "title": "Login to Deploifai",
        "icon": "$(accounts-view-bar-icon)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "deploifai.changeWorkspace",
          "when": "view == deploifaiProjects && deploifaiLoggedIn",
          "group": "navigation"
        },
        {
          "command": "deploifai.logout",
          "when": "view == deploifaiProjects && deploifaiLoggedIn",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/node-fetch": "^2.6.2",
    "@types/vscode": "^1.70.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "prettier": "^2.7.1",
    "typescript": "^4.7.4",
    "vsce": "^2.11.0"
  },
  "dependencies": {
    "@apollo/client": "^3.6.9",
    "@microsoft/vscode-azext-utils": "^0.3.15",
    "cross-fetch": "^3.1.5",
    "graphql": "^16.6.0",
    "keytar": "^7.9.0",
    "node-fetch": "^2.6.7",
    "ssh-config": "^4.1.6"
  }
}
