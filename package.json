{
  "name": "deploifai",
  "displayName": "Deploifai",
  "publisher": "Deploifai",
  "icon": "Deploifai128_128.png",
  "author": {
    "name": "Deploifai Limited"
  },
  "readme": "README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/deploifai/vscode-deploifai.git"
  },
  "description": "Deploifai support within VSCode",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "extensionKind": [
    "ui"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "deploifaiSidebarView",
          "title": "Deploifai",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "deploifaiSidebarView": [
        {
          "id": "deploifaiProjects",
          "name": "Projects",
          "type": "tree",
          "contextualTitle": "Deploifai"
        }
      ]
    },
    "commands": [
      {
        "command": "deploifaiProjects.openRemote",
        "title": "Open Remote",
        "icon": "media/icon.svg"
      },
      {
        "command": "deploifaiProjects.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "deploifai.changeWorkspace",
        "title": "Change workspace",
        "icon": "$(library)"
      },
      {
        "command": "deploifai.logout",
        "title": "Logout",
        "icon": "$(sign-out)"
      },
      {
        "command": "deploifai.login",
        "title": "Login to Deploifai",
        "icon": "$(accounts-view-bar-icon)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "deploifaiProjects.refresh",
          "when": "view == deploifaiProjects && deploifaiLoggedIn",
          "group": "navigation@1"
        },
        {
          "command": "deploifai.changeWorkspace",
          "when": "view == deploifaiProjects && deploifaiLoggedIn",
          "group": "navigation@2"
        },
        {
          "command": "deploifai.logout",
          "when": "view == deploifaiProjects && deploifaiLoggedIn",
          "group": "navigation@3"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "precompile": "yarn run download-schema && yarn run codegen",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "download-schema": "SCHEMA=https://api.deploif.ai/graphql graphql-codegen --config codegen/schema.ts",
    "codegen": "graphql-codegen --config codegen/codegen.ts"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/client-preset": "^4.1.0",
    "@graphql-codegen/fragment-matcher": "^5.0.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.6.0",
    "@types/node-fetch": "^2.6.4",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.1.5",
    "@vscode/vsce": "^2.21.0",
    "eslint": "^8.20.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "prettier": "^2.7.1",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@apollo/client": "^3.8.3",
    "cross-fetch": "^3.1.5",
    "graphql": "^16.8.0",
    "keytar": "^7.9.0",
    "node-fetch": "^2.7.0",
    "ssh-config": "^4.1.6"
  }
}
